<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="release.gameoflife.GameController">
    <center>
        <GridPane fx:id="grid" />
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="stepButton" text="Шаг" />
            <Button fx:id="startButton" text="Старт" />
            <Button fx:id="stopButton" text="Стоп" />
            <Button fx:id="clearButton" text="Очистить" />
        </HBox>
    </bottom>
</BorderPane>
